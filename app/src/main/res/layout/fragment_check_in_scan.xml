<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.trace.CheckInScanFragment">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanScanCode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvScanResult"
        app:autoFocusButtonColor="@color/white"
        app:autoFocusButtonVisible="true"
        app:flashButtonColor="@color/white"
        app:frameAspectRatioHeight="1"
        app:frameAspectRatioWidth="1"
        app:frameCornersRadius="10dp"
        app:frameCornersSize="60dp"
        app:frameSize="0.75"
        app:frameThickness="4dp"
        app:maskColor="#6C000000"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/tvScanResult"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textIsSelectable="true"/>
</FrameLayout>