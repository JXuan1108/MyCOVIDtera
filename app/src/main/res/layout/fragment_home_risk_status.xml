<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.home.RiskStatusFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvq1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cvq2"
            app:cardElevation="8dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amiko_bold"
                    android:text="1. What symptoms of COVID-19 are you exhibiting?"
                    android:textColor="@color/black_txt"
                    android:textSize="18sp"
                    />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkFever"
                    android:layout_width="match_parent"
                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                    android:layout_height="30dp"
                    android:text="Fever"
                    android:textColor="@color/black_txt"
                    android:textSize="16sp"
                    android:fontFamily="@font/amiko_semibold"
                    android:buttonTint="@color/purple_title"/>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkCough"
                    android:layout_width="match_parent"
                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                    android:layout_height="30dp"
                    android:text="Cough"
                    android:textColor="@color/black_txt"
                    android:textSize="16sp"
                    android:fontFamily="@font/amiko_semibold"
                    android:buttonTint="@color/purple_title"/>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkBreathing"
                    android:layout_width="match_parent"
                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                    android:layout_height="30dp"
                    android:text="Difficulty in breathing"
                    android:textColor="@color/black_txt"
                    android:textSize="16sp"
                    android:fontFamily="@font/amiko_semibold"
                    android:buttonTint="@color/purple_title"/>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkSore"
                    android:layout_width="match_parent"
                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                    android:layout_height="30dp"
                    android:text="Sore throat"
                    android:textColor="@color/black_txt"
                    android:textSize="16sp"
                    android:fontFamily="@font/amiko_semibold"
                    android:buttonTint="@color/purple_title"/>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkHeadache"
                    android:layout_width="match_parent"
                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                    android:layout_height="30dp"
                    android:text="Headache"
                    android:textColor="@color/black_txt"
                    android:textSize="16sp"
                    android:fontFamily="@font/amiko_semibold"
                    android:buttonTint="@color/purple_title"/>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkSmell"
                    android:layout_width="match_parent"
                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                    android:layout_height="30dp"
                    android:text="Lost of smell"
                    android:textColor="@color/black_txt"
                    android:textSize="16sp"
                    android:fontFamily="@font/amiko_semibold"
                    android:buttonTint="@color/purple_title"/>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkTaste"
                    android:layout_width="match_parent"
                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                    android:layout_height="30dp"
                    android:text="Loss of taste"
                    android:textColor="@color/black_txt"
                    android:textSize="16sp"
                    android:fontFamily="@font/amiko_semibold"
                    android:buttonTint="@color/purple_title"/>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkChills"
                    android:layout_width="match_parent"
                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                    android:layout_height="30dp"
                    android:text="Chills"
                    android:textColor="@color/black_txt"
                    android:textSize="16sp"
                    android:fontFamily="@font/amiko_semibold"
                    android:buttonTint="@color/purple_title"/>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkDiarrhea"
                    android:layout_width="match_parent"
                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                    android:layout_height="30dp"
                    android:text="Diarrhea"
                    android:textColor="@color/black_txt"
                    android:textSize="16sp"
                    android:fontFamily="@font/amiko_semibold"
                    android:buttonTint="@color/purple_title"/>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkFatique"
                    android:layout_width="match_parent"
                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                    android:layout_height="30dp"
                    android:text="Fatique"
                    android:textColor="@color/black_txt"
                    android:textSize="16sp"
                    android:fontFamily="@font/amiko_semibold"
                    android:buttonTint="@color/purple_title"/>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkNausea"
                    android:layout_width="match_parent"
                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                    android:layout_height="30dp"
                    android:text="Nausea or vomiting"
                    android:textColor="@color/black_txt"
                    android:textSize="16sp"
                    android:fontFamily="@font/amiko_semibold"
                    android:buttonTint="@color/purple_title"/>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkCongestion"
                    android:layout_width="match_parent"
                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                    android:layout_height="30dp"
                    android:fontFamily="@font/amiko_semibold"
                    android:text="Runny nose or nausal congestion"
                    android:textColor="@color/black_txt"
                    android:textSize="16sp"
                    android:buttonTint="@color/purple_title"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvq2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvq1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                >

                <TextView
                    android:id="@+id/tvLabelq2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amiko_bold"
                    android:text="2. Have you attend any event/ areas associated with known COVID-19 cluster?"
                    android:textColor="@color/black_txt"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/tgq2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLabelq2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnq2Yes"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black_txt"
                        app:cornerRadius="5dp"
                        android:elevation="2dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnq2No"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:text="No"
                        android:textColor="@color/black_txt"
                        app:cornerRadius="5dp"
                        android:elevation="2dp" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvq3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvq2"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                >

                <TextView
                    android:id="@+id/tvLabelq3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amiko_bold"
                    android:text="3. Have you travelled abroad within the last 14 days?"
                    android:textColor="@color/black_txt"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/tgq3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLabelq3">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnq3Yes"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:text="Yes"
                        android:textColor="@color/black_txt"
                        app:cornerRadius="5dp"
                        android:elevation="2dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvLabelq3" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnq3No"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:text="No"
                        android:textColor="@color/black_txt"
                        app:cornerRadius="5dp"
                        android:elevation="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvLabelq3" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvq4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvq3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvLabelq4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amiko_bold"
                    android:text="4. Have you close contact with any confrimed or suspected COVID-19 cases within last 14 days?"
                    android:textColor="@color/black_txt"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/tgq4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLabelq4">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnq4Yes"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:text="Yes"
                        android:textColor="@color/black_txt"
                        app:cornerRadius="5dp"
                        android:elevation="2dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvLabelq4" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnq4No"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:text="No"
                        android:textColor="@color/black_txt"
                        app:cornerRadius="5dp"
                        android:elevation="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvLabelq4" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnSubmitRiskStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/purple_btn"
            android:fontFamily="@font/amiko_semibold"
            android:text="Submit"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvq4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>