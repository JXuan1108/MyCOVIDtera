<?xml version="1.0" encoding="utf-8"?>
<com.jem.liquidswipe.layout.LiquidSwipeFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/sky_blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvThingsToDoLabel"
            android:text="Things To Do"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:textSize="30sp"
            android:fontFamily="@font/amiko_bold"
            android:textColor="@color/black_txt"/>

        <TextView
            android:id="@+id/tvThingsToDo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/amiko_semibold"
            android:text="Quit"
            android:textColor="@color/black_txt"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/tvThingsToDoLabel"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:lottie_rawRes="@raw/do_wear_mask"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wear mask indoors!"
                android:textSize="30sp"
                android:fontFamily="@font/amiko_bold"
                android:textColor="@color/black_txt"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Face masks can help limit transmission of virus and to protect from infection! Face masks serve as barriers that help stop the spread of droplets travelling through the air. Especially in an enclosed area with limited air circulation! "
                android:textSize="20sp"
                android:fontFamily="@font/amiko_semibold"
                android:textColor="@color/black_txt"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="50dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/circle_indicator"
                />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/circle_indicator_empty"
                />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/circle_indicator_empty"
                />
        </LinearLayout>
    </RelativeLayout>
</com.jem.liquidswipe.layout.LiquidSwipeFrameLayout>