<?xml version="1.0" encoding="utf-8"?>
<com.jem.liquidswipe.layout.LiquidSwipeFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_btn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tvThingsToDoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/amiko_bold"
            android:text="Things To Do"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvThingsToDo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/amiko_semibold"
            android:text="Quit"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvThingsToDoLabel"
            android:orientation="vertical"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:lottie_rawRes="@raw/do_wash_hand"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/amiko_bold"
                android:gravity="center_horizontal"
                android:text="Wash your hands regularly!"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="40dp"
                android:fontFamily="@font/amiko_semibold"
                android:gravity="center_horizontal"
                android:text="Use warm water and soap to wash your hands for at least 30 seconds! Clean your wrists, between fingers, and also your fingernails. Using antibacterial soap will eliminate 99% of the bacterias!"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="50dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/circle_indicator_empty"
                />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/circle_indicator"
                />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/circle_indicator_empty"
                />
        </LinearLayout>
    </RelativeLayout>
</com.jem.liquidswipe.layout.LiquidSwipeFrameLayout>